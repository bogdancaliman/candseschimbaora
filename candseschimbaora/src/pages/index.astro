import Card from "../components/Card.astro";

const d = new Date();

function getLastSundayInMonth(year, month) {
  //calculate the Sunday day for march/october
  for (let i = 0; i < 7; i++)
    if (new Date(year, month, 31 - i).getDay() === 0) return 31 - i;
}

const lunaMartieOctombrie =
  d.getMonth() < 2 ||
  (d.getMonth() === 2 &&
    d.getDate() <= getLastSundayInMonth(d.getFullYear(), 2))
    ? "martie"
    : "octombrie";
const ultimaDuminica =
  lunaMartieOctombrie === "martie"
    ? getLastSundayInMonth(d.getFullYear(), 2)
    : getLastSundayInMonth(d.getFullYear(), 9);
const ora1 = lunaMartieOctombrie === "martie" ? 3 : 4;
const ora2 = lunaMartieOctombrie === "martie" ? 4 : 3;
